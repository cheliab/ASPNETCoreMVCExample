@model System.Collections.Generic.IEnumerable<Phone>
@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="text-center">
    <h1 class="display-4">Смартфоны</h1>
    <table>
        <tr>
            <td>Модель</td>
            <td>Производитель</td>
            <td>Цена</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
            </tr>
        }
    </table>
</div>